<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeColor="#DDDDDD"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:attr/dividerHorizontal"
            android:dividerPadding="8dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:showDividers="middle">

            <!-- Fecha -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="@string/appointment_date"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="6dp"
                android:paddingHorizontal="4dp"
                android:text="--"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Fisioterapeuta -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Fisioterapeuta"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDetailPhysio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="6dp"
                android:paddingHorizontal="4dp"
                android:text="--"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Paciente -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Paciente"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDetailPatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="6dp"
                android:paddingHorizontal="4dp"
                android:text="--"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Diagnóstico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Diagnóstico"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDetailDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="6dp"
                android:paddingHorizontal="4dp"
                android:text="--"
                android:textSize="18sp" />

            <!-- Tratamiento -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Tratamiento"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDetailTreatment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="6dp"
                android:paddingHorizontal="4dp"
                android:text="--"
                android:textSize="18sp" />

            <!-- Observaciones -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="4dp"
                android:text="Observaciones"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDetailObservations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:padding="6dp"
                android:paddingHorizontal="4dp"
                android:text="@string/none"
                android:textSize="18sp" />

            <!-- Botón -->
            <Button
                android:id="@+id/btnViewPhysio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/purple_500"
                android:text="@string/view_physio_profile"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDeleteAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Eliminar cita"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>
